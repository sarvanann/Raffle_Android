<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sign_in_txt</item>
        <item name="colorPrimaryDark">@color/sign_in_txt</item>
        <item name="colorAccent">@color/sign_in_txt</item>
    </style>

    <style name="title_header_txt_style">
        <item name="android:fontFamily">@font/quicksand_light</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/sign_up_txt</item>
    </style>

    <style name="sign_up_txt_style">
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/sign_up_txt</item>
    </style>

    <style name="sign_in_txt_style">
        <item name="android:fontFamily">@font/quicksand_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/sign_in_txt</item>
    </style>

    <style name="inner_headers_txt_style">
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/sign_in_txt</item>
    </style>

    <style name="mobile_verification_edittext_style">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:maxLength">10</item>
        <item name="android:padding">10dp</item>
        <item name="android:inputType">number</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor_bg</item>
    </style>

    <style name="email_signin_edittext_style">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:maxLength">30</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:padding">10dp</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor_bg</item>
    </style>

    <style name="password_signin_edittext_style">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:maxLength">15</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor_bg</item>
    </style>

    <style name="send_button_style">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:background">@drawable/send_btn_bg</item>
    </style>

    <style name="otp_verification_edittext_style">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:maxLength">10</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:inputType">number</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:background">@drawable/shadow_bg</item>
        <item name="android:textCursorDrawable">@drawable/cursor_bg</item>
    </style>
</resources>
